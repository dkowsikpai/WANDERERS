<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:gravity="left"
    tools:context=".startatrip">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="384dp"
        android:layout_height="57dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:text="DETAILS OF YOUR NEW TRIP"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#0F0808"
        android:includeFontPadding="true"
        android:textColorHighlight="@drawable/button"
        android:backgroundTint="#A00909"/>




    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="left"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:textSize="15dp"

        android:textColor="#0E0707"
        android:text="  Name :"
        />
    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_gravity="center"
        android:inputType="textPersonName"
        android:hint="Enter your name"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="left"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:text="  Number of members  :"
        android:textColor="#0E0707"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_gravity="center"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:hint="Enter number of companion with you" />



    <TextView
        android:id="@+id/textView5"
        android:textColor="#0E0707"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="left"
        android:layout_marginTop="25dp"


        android:ems="10"
        android:text="  Starting point  :"
        />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:hint="Enter starting place of your trip" />





    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="left"
        android:layout_marginTop="25dp"
        android:textColor="#0E0707"
        android:ems="10"
        android:text="  Destination  :"
         />
    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:hint="Enter your final destination" />




</LinearLayout>